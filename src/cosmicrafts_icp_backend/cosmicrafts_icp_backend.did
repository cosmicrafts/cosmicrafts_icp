// src/cosmicrafts_icp_backend/cosmicrafts_icp_backend.did

type UserId = principal;

type User = record {
    id: UserId;
    username: text;
};

type OperationResult = variant {
    Success;
    Error: text;
};

service : {
  create_user: (User) -> (OperationResult);
  get_user: (UserId) -> (opt User) query;
  update_user: (UserId, text) -> (OperationResult);
  delete_user: (UserId) -> (OperationResult);
  get_all_users: () -> (vec User) query;
  delete_all_users: () -> (OperationResult);
}
